{
    "extend": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaVersion": 7,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "ecmaFeatures": {
        "jsx": true
    },
    "rules": {
        "semi": 2,
        "no-unused-vars": 1,
        "no-undef": 2,
        "no-const-assign": 2,
        "no-class-assign": 2,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/jsx-no-undef": 2
    },
    "globals": {
        "expect": true,
        "sinon": true,
    },
    "env": {
        "browser": true,
        "mocha": true,
        "commonjs": true
    },
    "plugins": [
        "react"
    ]
}
